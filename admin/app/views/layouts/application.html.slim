doctype html
html
  head
    title Admin
    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags
  body
    div.navbar.navbar-inverse.navbar-fixed-top role='navigation'
      div.container
        div.navbar-header
          = link_to 'Mini Shop Admin', root_path, class: 'navbar-brand'
        ul.nav.navbar-nav.navbar-right
          li
            = link_to 'Accounts', root_path, anchor: 'accounts'
          li
            = link_to 'Inventory', root_path, anchor: 'inventory'

    div.container
      div.message
        - if flash[:error].present?
          div.panel.panel-danger
            - heading = body = nil
            - if flash[:error].is_a?(Hash)
              - heading = flash[:error]['primary']
              - body = flash[:error]['secondary']
            - elsif flash[:error].is_a?(String)
              - heading = 'Error'
              - body = flash[:error]
            div.panel-heading
              h3.panel-title
                = heading
            div.panel-body
              = body
      div.content.table-responsive
        = yield
