h2.page-header
  = @digital_item.title

div.row
  div.col-md-4
    div.panel class="#{@digital_item.active? ? 'panel-success' : 'panel-danger' }"
      div.panel-heading
        h4 ID #{@digital_item.id}
      table.table
        tbody
          tr
            td.text-right
              label Title
            td
              = @digital_item.title
          tr
            td.text-right
              label Description
            td
              = @digital_item.description
          tr
            td.text-right
              label Active
            td
              = yesno(@digital_item.active?)
          tr
            td.text-right
              label Available
            td
              = yesno(@digital_item.available?)
        tfoot
          tr
            td.text-right
              = button_to activate_inventory_digital_item_path(@digital_item.id), method: :put, disabled: !@digital_item.activable?, class: 'btn btn-warning' do
                i.fa.fa-check
                |  Activate
            td
              = button_to inventory_digital_item_path(@digital_item.id), method: :delete, disabled: !@digital_item.deletable?, class: 'btn btn-danger'  do
                i.fa.fa-trash-o
                |  Delete
  div.col-md-4
    div.panel.panel-default
      div.panel-heading
        h4 Edit Item
      div.panel-body
        = form_for :digital_item, url: inventory_digital_item_path(@digital_item.id), method: :put, html: { role: 'form', class: 'form-horizontal' } do |f|
          div.form-group
            label.control-label.col-md-4 Title
            div.col-md-8
              = f.text_field :title, class: 'form-control', placeholder: 'Title'
          div.form-group
            label.control-label.col-md-4 Description
            div.col-md-8
              = f.text_field :description, class: 'form-control', placeholder: 'Description'
          div.form-group
            div.col-md-offset-4.col-md-8
              = button_tag class: 'btn btn-warning', name: nil do
                i.fa.fa-pencil
                |  Update
